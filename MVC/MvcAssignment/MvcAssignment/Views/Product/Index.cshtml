@{
    ViewBag.Title = "Index";
}

@model MvcAssignment.Models.ProductModal
@using (Html.BeginForm("Index","Product",FormMethod.Post))
{
    <h2>Product Details</h2>
    <br />
    <br />
    <b>Product Name : </b>@Html.TextBoxFor(m=>m.ProductName)
    <br />
    <br />
    <b>Product Price : </b>@Html.TextBoxFor(m=>m.Price)
    <br />
    <br />
    <b>Quantity : </b>@Html.TextBoxFor(m=>m.Qty)
    <br />
    <br />
    <input type="submit" value="calculate"/>
    <br />
    <br />
}
<hr />
Product Name :@ViewBag.name
<br />
Total Price :@ViewBag.result
