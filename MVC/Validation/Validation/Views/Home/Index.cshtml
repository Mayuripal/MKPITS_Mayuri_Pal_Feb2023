@{
    ViewBag.Title = "Home Page - Student Detail";
}

@model Validation.Models.StudentModel
<h3>Student Form</h3>
@using (Html.BeginForm("StudentDetail","Home",FormMethod.Post))
{
    <ol>
        <li>
            @Html.LabelFor(m=>m.Name)
            @Html.TextBoxFor(m=>m.Name)
            @Html.ValidationMessageFor(m=>m.Name)
        </li>
        <li>
            @Html.LabelFor(m=>m.Age)
            @Html.TextBoxFor(m=>m.Age)
            @Html.ValidationMessageFor(m=>m.Age)
        </li>
    </ol>
    <input type="submit" value="Save Student Detail" />

}
<hr />
<h3 style="color:green">Student Details</h3><br />
<br>
<b>Name :</b> @ViewBag.Name<br />
<b>Age :</b> @ViewBag.Age<br />