@{
    ViewBag.Title = "Index";
}
@using Form.Models
@model SignupModel

@using (Html.BeginForm("Index","Signup",FormMethod.Post))
{
    <b>SignUp Form</b>
    <hr />
    <br />
    <span> Enter UserName : </span>@Html.TextBoxFor(m=>m.UserName)
    <br />
    <span> Enter Gender : </span>
    <span> Male  </span>
    @Html.RadioButtonFor(m=>m.gender,"Male")
    <span> Female </span>
    @Html.RadioButtonFor(m=>m.gender,"Female")
    <br />
    <br />
    <span> Select Course : </span>
    <span> Dotnet </span>
     @Html.CheckBoxFor(m=>m.sub1,true)
    <span> Java </span>
     @Html.CheckBoxFor(m=>m.sub2,true)
    <br />
    <br />
    <span> Select City : </span>
    @Html.DropDownListFor(m=>m.SelectCity,new SelectList(Enum.GetValues(typeof(city))),"--select")
    <br />
    <br />
    <input type="submit" value="submit" />
    
}
<hr />
<br />
