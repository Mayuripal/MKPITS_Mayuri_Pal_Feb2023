@{
    ViewBag.Title = "Signup";
}
@model SignupForm.Models.SignupModel
@using (Html.BeginForm("Signup","Signup",FormMethod.Post))
{
    <h2>SignUp Form</h2>
    <br /><br />
    <b>Mail : </b> @Html.TextBoxFor(m=>m.Email,new{@Value="Email"})

    <br /><br />
    <b>Password : </b>@Html.TextBoxFor(m=>m.Password,new{@Value="Password"})

    <br /><br />
    <input type="submit" value="signup" />
}


<hr />
<h3> signup details :</h3>
Email is : @ViewBag.Email
<br />
Password is : @ViewBag.Password
